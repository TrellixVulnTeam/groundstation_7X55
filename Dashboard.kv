#Root screen
<DashboardGridLayout>:
    rows: 2
    padding: 10
    spacing: 10
    size_hint_x: 1
    size_hint_y: 1
    id: dashboard
    display: missionclock
    altgraph: graph_alt

    #background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    #The top bar
    GridLayout:
        cols: 3
        size_hint_y: 0.1
        size_hint_x: 1

        Image:
            source: "uostar-logo.png"

        #Will display current date and time
        Label:
            id: missionclock
            font_size: "32sp"
            text: ""

        #Just a label saying that this is our ground station
        Label:
            text: "Ground Station"
            font_size: "30sp"

    #To house the graphs, buttons
    GridLayout:
        cols: 2
        size_hint_x: 1
        size_hint_y: 0.9
        padding: 10
        spacing: 10

        GridLayout:
            rows: 3
            spacing: 10

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    Label:
                        text: "Altitude"
                        font_size: "24sp"

                    Label:
                        text: "current alt"
                        font_size: "30sp"

            Graph:
                xlabel: "Time"
                ylabel: "Altitude (m)"
                id: graph_alt



        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_x: 0.1
                size_hint_y: 0.05
                id: connect
                text: "Connect"
                on_press: dashboard.connect()







