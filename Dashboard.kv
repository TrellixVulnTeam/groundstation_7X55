<CustGraph>
    xlabel: "Time"
    #x_tick_major: 25
    #x_ticks_minor: 5
    x_grid_label: True
    y_grid_label: True


<CustomPopup>:
    size_hint: .4, .4
    auto_dismiss: False
    title: "Connection"
    Button:
        size_hint: 1, 1
        font_size: "22sp"
        text: "Connection Made"
        on_press: root.dismiss()


#Root screen
<DashboardGridLayout>:
    rows: 2
    padding: 10
    spacing: 0
    size_hint_x: 1
    size_hint_y: 1
    id: dashboard
    display: missionclock
    graph_alt: altgraph

    #background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    #The top bar
    GridLayout:
        cols: 3
        size_hint_y: 0.1
        size_hint_x: 1


        Image:
            source: "uostar-logo.png"

        #Will display current date and time
        Label:
            id: missionclock
            font_size: "32sp"
            text: ""

        #Just a label saying that this is our ground station
        Label:
            text: "Ground Station"
            font_size: "30sp"

    #To house the graphs, buttons
    GridLayout:
        cols: 2
        size_hint_x: 1
        size_hint_y: 0.9
        padding: 10
        spacing: 10

        GridLayout:
            cols: 2
            GridLayout:
                rows: 3
                size_hint: 0.2, 1

                GridLayout:
                    rows: 2

                    Label:
                        text: "Altitude"
                        font_size: "30sp"

                    Label:
                        text: "current alt"
                        font_size: "26sp"

                GridLayout:
                    rows: 2

                    Label:
                        text: "Velocity"
                        font_size: "30sp"

                    Label:
                        text: "current vel"
                        font_size: "26sp"

                GridLayout:
                    rows: 2

                    Label:
                        text: "Acceleration"
                        font_size: "30sp"

                    Label:
                        text: "current acc"
                        font_size: "26sp"
            #For graphs
            GridLayout:
                rows: 3
                size_hint: 0.8, 1

                CustGraph:
                    x_ticks_major: 25
                    x_ticks_minor: 5
                    y_ticks_major: 1
                    xmin: 0
                    ymin: -1
                    xmax: 100
                    ymax: 1
                    padding: 5

                    ylabel: "Altitude"
                    id: altgraph

                CustGraph:
                    ylabel: "Velocity"

                CustGraph:
                    ylabel: "Acceleration"



        BoxLayout:
            size_hint: 0.3, 1
            orientation: "horizontal"
            Button:
                size_hint: 0.8, 0.1
                id: connect
                text: "Connect"
                on_press: dashboard.connect()







